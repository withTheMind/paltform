<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.paltform.member.dao.IMemberDao">
	
	<select id="login" resultMap="memberMapper">
		select * from Member where phone = #{arg0} and password = #{arg1}
	</select>
	
	<resultMap id="memberMapper" type="Member">
        <id column="memberId" property="memberId"/>
        <result column="phone" property="phone"/>
        <result column="password" property="password"/>
    </resultMap>

</mapper>
